# Criei um ambiente com 3 maquinas virtuais e meu notebook para laboratorio e execução do Teste
# Utilizei o CentOS 8 , sendo 1 máquina sendo meu Principal "Master" onde instalei o Ansible. 

yum install ansible -y

#criei um arquivo de inventario com a lista de ip dos servers 2 linux e 1 windows
#192.168.1.3 linux
#192.168.1.4 windows
#192.168.1.5 linux

#alterar o ip maskara de rede e gateway

ansible -i /home/dhief/inventoryList 192.168.1.4 -m nmcli -a "conn_name=enp0s3 ifname= type= ip4=192.168.1.10/24 gw4=192.168.1.1 state=present "  --private-key .ssh/id_rsa
ansible -i /home/dhief/inventoryList 192.168.1.3 -m nmcli -a "conn_name=enp0s3 ifname= type= ip4=192.168.1.11/24 gw4=192.168.1.1 state=present "  --private-key .ssh/id_rsa
ansible -i /home/dhief/inventoryList 192.168.1.5 -m nmcli -a "conn_name=enp0s3 ifname= type= ip4=192.168.1.12/24 gw4=192.168.1.1 state=present "  --private-key .ssh/id_rsa

# Intalação do Zabbix-agent nos serves







